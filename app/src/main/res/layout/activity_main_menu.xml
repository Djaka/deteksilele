<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenu"
    android:background="#FFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_exam"
        android:text="Periksa"
        android:padding="20dp"
        android:drawableRight="@drawable/ic_stethoscope"
        android:background="@drawable/background_rec"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_history"
        android:text="Riwayat Pengecekan"
        android:padding="20dp"
        android:drawableRight="@drawable/ic_history"
        android:background="@drawable/background_rec"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_about"
        android:text="Tentang Apps"
        android:padding="20dp"
        android:drawableRight="@drawable/ic_apps"
        android:background="@drawable/background_rec"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_tips"
        android:text="Tips And Trick"
        android:padding="20dp"
        android:drawableRight="@drawable/ic_favorite"
        android:background="@drawable/background_rec"
        android:clickable="true"/>

</LinearLayout>